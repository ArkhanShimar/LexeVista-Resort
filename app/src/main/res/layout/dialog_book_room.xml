<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialog_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/dialog_checkin_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Check-in Date (YYYY-MM-DD)"
        android:inputType="date"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/dialog_checkout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Check-out Date (YYYY-MM-DD)"
        android:inputType="date"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adults: "
            android:layout_gravity="center_vertical"/>
        <Spinner
            android:id="@+id/dialog_adults_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Children: "
            android:layout_gravity="center_vertical"/>
        <Spinner
            android:id="@+id/dialog_children_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/dialog_special_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Special Requests (optional)"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/dialog_book_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Room"
        android:textStyle="bold"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorAccent"/>

</LinearLayout> 